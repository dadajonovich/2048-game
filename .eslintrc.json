{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "no-plusplus": "off",
    "no-continue": "off",
    "no-param-reassign": "off",
    "class-methods-use-this": "off",
    "no-alert": "off"
  }
}
